# Add Oracle library to path

INSTANTCLIENT_10_2="/usr/local/oracle/instantclient_10_2"
INSTANTCLIENT_11_2="/usr/local/oracle/instantclient_11_2"

if [ -d "$INSTANTCLIENT_10_2" ]; then
  export DYLD_LIBRARY_PATH="$INSTANTCLIENT_10_2"
  export SQLPATH="$INSTANTCLIENT_10_2"
else
  export DYLD_LIBRARY_PATH="$INSTANTCLIENT_11_2"
  export SQLPATH="$INSTANTCLIENT_11_2"
fi
export TNS_ADMIN="/usr/local/oracle/network/admin"
export NLS_LANG="AMERICAN_AMERICA.UTF8"
export PATH=$PATH:$DYLD_LIBRARY_PATH

# Add MySQL library to path
MYSQL_LIB="/usr/local/mysql/lib"

if [ -d "$MYSQL_LIB" ]; then
  export DYLD_LIBRARY_PATH=$MYSQL_LIB:$DYLD_LIBRARY_PATH
fi

# Add HomeBrew path
export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH
# Add RVM to PATH for scripting
export PATH=$HOME/.rvm/bin:$PATH
# Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# use MacVim-bundled Vim if available
if [ -f /Applications/MacVim.app/Contents/MacOS/Vim ]; then
  alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"
  alias vi=vim
fi

if [ -f "`brew --prefix`/bin/ctags" ]; then
  alias ctags="`brew --prefix`/bin/ctags"
fi

# vim ftw!
export EDITOR=vim

# i'm a lazy typist
alias z="zeus"
alias v="vim"

# always run tmux with utf-8
alias tmux="tmux -u"

# prevent 'screen-256color': unknown terminal type
# when ssh'ing into remote in a tmux session
# https://coderwall.com/p/ftuwdq
alias ssh='TERM=xterm ssh'

# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# Initialize rbenv
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# export cairo library for rabbit
export DYLD_LIBRARY_PATH=/usr/local/opt/cairo/lib:$DYLD_LIBRARY_PATH

export CLICOLOR=1
## light background
#export LSCOLORS=ExFxCxDxBxegedabagacad
## dark background
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

# configure JAVA_HOME
if [ -f /usr/libexec/java_home ]; then
  export JAVA_HOME=$(/usr/libexec/java_home)
fi

# configure golang environments
if [ -d /usr/local/opt/go/libexec ]; then
  export GOROOT=/usr/local/opt/go/libexec
  export GOPATH=$HOME/go
  export PATH=$GOROOT/bin:$GOPATH/bin:$PATH
fi
